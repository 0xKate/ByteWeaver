{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo;MinSizeRel"
            }
        },

        {
            "name": "x64",
            "displayName": "x64 (Multi-Config)",
            "inherits": "windows-base"
        },

        {
            "name": "x86",
            "displayName": "x86 (Multi-Config)",
            "inherits": "windows-base"
        }
    ],

    "buildPresets": [
        { "name": "x64-Debug",   "configurePreset": "x64", "configuration": "Debug" },
        { "name": "x64-Release", "configurePreset": "x64", "configuration": "Release" },
        { "name": "x86-Debug",   "configurePreset": "x86", "configuration": "Debug" },
        { "name": "x86-Release", "configurePreset": "x86", "configuration": "Release" }
    ]
}
